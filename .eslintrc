{
  "plugins": [
      "@babel/preset-env",
      "@babel/preset-react",
      "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
      "es6":     true,
      "browser": true,
      "node":    true,
      "mocha":   true,
      "jest": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb",
      "prettier"
  ],
  "rules": {
    "semi": [2, "always"],
    "indent": ["error", 4],
    "object-curly-spacing": ["error", "always"],
    "no-extra-parens": "error",
    "max-len": ["error", { "code": 100 }],
    "no-multi-spaces": "error",
    "prettier/prettier": ["error"]
  },
  "settings": {
    "react": {
      "version": "16.3"
    }
  }
}